@model IEnumerable<Entities.Concrete.Scientific>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/ManagerPanel/_Layout.cshtml";
}

<br />


<p>
    <a href="/Scientific/Create" class="btn btn-success">Create</a>
</p>
<table class="table" id="tablo">
    <thead>
        <tr>
            <th>ID</th>
            <th>FULL NAME</th>
            <th>UPDATE</th>
            <th>DELETE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FullName</td>
                <td><a href="/Scientific/Bring/@item.Id" class="btn btn-primary">Update</a></td>
                <td><a href="/Scientific/Delete/@item.Id" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>

</table>

