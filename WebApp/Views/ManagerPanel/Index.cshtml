@model IEnumerable<Entities.Concrete.Topic>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/ManagerPanel/_Layout.cshtml";
}
<br />


<p>
    <a href="/ManagerPanel/Create" class="btn btn-success">Create</a>
</p>
<table class="table" id="tablo">
    <thead>
        <tr>
            <th>ID</th>
            <th>TOPIC</th>
            <th>UPDATE</th>
            <th>DELETE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Description</td>
                <td><a href="/ManagerPanel/Bring/@item.Id" class="btn btn-primary">Update</a></td>
                <td><a href="/ManagerPanel/Delete/@item.Id" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>

</table>
